{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
    ],
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}